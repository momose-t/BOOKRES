<h1>Books</h1>


<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li style="color: red;"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
		</tr>
	</thead>
	<% @books.each do |book| %>
	<tbody>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show",book_path(book.id)%></td>
			<td><%= link_to "Edit",edit_book_path(book.id)%></td>
			<td><%= link_to "Destroy",book_path(book.id),method: :delete %>
	</tbody>
	<% end %>
</table>
<!-- 新規投稿部分 -->
<h1>Newbook</h1>

<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>body</h4>
	<%= f.text_area :body %>



	<%= f.submit 'CreatBook' %>
<% end %>

